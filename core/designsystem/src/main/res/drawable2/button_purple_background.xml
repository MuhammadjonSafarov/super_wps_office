<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:color="@color/purple">
    <item android:id="@+id/background">
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="4dp"/>
                    <solid android:color="@color/almost_black_alpha_15"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp"/>
                    <solid android:color="@color/purple"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>
